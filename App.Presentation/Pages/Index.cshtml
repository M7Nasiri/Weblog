@page
@model IndexModel
@using App.Application.Utils
@{
    ViewData["Title"] = "صفحه اصلی وبلاگ";
}

<div class="container mt-4">

    <h2 class="mb-4 border-bottom pb-2">آخرین پست‌ها</h2>
    @if(Model.Posts != null && Model.Posts.Any())
    {
        @foreach (var post in Model.Posts)
        {
            <div class="card mb-4 shadow-sm">

                <div class="row g-0">

                    <div class="col-md-4">
                        <img src="@post.ImagePath" class="img-fluid rounded-start w-100 h-100 object-fit-cover" />
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">

                            @* عنوان پست *@
                            <h3 class="card-title">
                                <a asp-page="/Post/Details" asp-route-id="@post.Id" class="text-decoration-none text-primary">
                                    @post.Title
                                </a>
                            </h3>

                            @* خلاصه پست *@
                            <p class="card-text text-muted" style="text-align: justify;">
                                @post.Description.Substring(0, Math.Min(post.Description.Length, 200)) ...
                            </p>

                            @* نویسنده و تاریخ *@
                            <p>نویسنده : @post.WriterUserName</p>
                            <p>تاریخ ایجاد : @post.CreatedAt.ToPersianString() </p>
                            @* تعداد بازدید *@
                            <span class="badge bg-info text-dark">👁 @post.ViewCount بازدید</span>

                            @* دکمه ادامه مطلب *@
                            <div class="mt-3">
                                <a asp-page="/Post/Details" asp-route-id="@post.Id" class="btn btn-primary btn-sm">
                                    ادامه مطلب →
                                </a>
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            <hr class="my-4" />
        }
    }
    else
    {
        <p  class="alert alert-danger">مطلبی برای نمایش وجود ندارد</p>
    }

</div>
