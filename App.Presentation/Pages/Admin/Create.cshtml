@page
@model App.Presentation.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "ساخت کاربر جدید";
}

<div class="container">
    <h2 class="my-4">ساخت کاربر جدید</h2>

    <form method="post">
        <div class="form-group">
            <label for="Title">نام کاربری</label>
            <input type="text" class="form-control" asp-for="model.UserName" />
        </div>
        <div class="form-group">
            <label for="Summary">رمز عبور</label>
            <input type="password" class="form-control" asp-for="model.Password" />
        </div>


        <div class="form-group">
            <label for="CategoryId">نقش</label>
            <select class="form-control" asp-for="model.Role" required>
                <option value="0">کاربر عادی</option>
                <option value="1">نویسنده</option>
                <option value="2">بازبینی کننده</option>
                <option value="3">مدیر</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">ایجاد کاربر</button>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>