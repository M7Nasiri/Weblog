@page
@using App.Application.Utils
@model App.Presentation.Pages.Verifier.PostApprovedModel
@{
    ViewData["Title"] = "تایید پست";
}

<div class="container">
    <h2 class="my-4">تایید پست</h2>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="model.Id" />
        <div class="form-group">
            <label for="Title">عنوان پست</label>
            <input type="text" class="form-control" asp-for="model.Title" readonly/>
        </div>
        

        <div class="form-group">
            <label for="Summary">متن اصلی</label>
            <textarea class="form-control" asp-for="model.Description" readonly></textarea>
        </div>

        <div class="form-group">
            <label for="Title">تصویر</label>
            <img src="@Model.model.ImagePath" class="img-thumbnail" />
        </div>

        <div class="form-group">
            <label for="CategoryId">دسته‌بندی</label>
            <select class="form-control" asp-for="@Model.model.CategoryId" readonly>
                <option value="@Model.model.CategoryId">@Model.model.CategoryName</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Title">نویسنده</label>
            <input type="text" class="form-control" asp-for="model.WriterUserName" readonly />
        </div>


        <div class="form-group">
            <label for="CategoryId">تایید/عدم تایید</label>
            <input type="checkbox" asp-for="@Model.model.IsApproved" class="form-check" />
        </div>

        <button type="submit" class="btn btn-primary">ثبت</button>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
</div>
