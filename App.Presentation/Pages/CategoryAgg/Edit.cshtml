@page
@model App.Presentation.Pages.CategoryAgg.EditModel
@{
    ViewData["Title"] = "ویرایش دسته بندی";
}


<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Category.Id"/>
        <div class="form-group">
            <label>نام دسته بندی</label>
            <input type="text" class="form-control" asp-for="Category.Title" />
        </div>

        <div class="form-group">
            <label>توضیحات</label>
            <textarea asp-for="Category.Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn btn-warning">ویرایش</button>
            <button type="reset" class="btn btn-outline-warning">پاک کردن</button>
        </div>
    </form>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>