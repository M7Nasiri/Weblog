@page
@model App.Presentation.Pages.CategoryAgg.DeleteModel
@{
    ViewData["Title"] = "حذف دسته بندی";
}

<div class="container">
    <form method="post" >
        <div class="form-group">
            <label>نام دسته بندی</label>
            <input type="text" class="form-control" asp-for="Category.Title" />
        </div>

        <div class="form-group">
            <label>توضیحات</label>
            <textarea asp-for="Category.Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn btn-danger">حذف</button>
            <button type="reset" class="btn btn-outline-danger">پاک کردن</button>
        </div>
        <div asp-validation-summary="All" class=" text-danger"></div>
    </form>
</div>
